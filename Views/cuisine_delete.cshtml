@{
  Layout="Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this category and all of its restaurants?</h2>

<h4>@Model.GetCuisineName()</h4>

<form action="/cuisines/delete/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit">Delete</button>
</form>

<p><a href="/cuisines/@Model.GetId()">Back to @Model.GetCuisineName()</a></p>
