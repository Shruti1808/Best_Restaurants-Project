@{
  Layout="Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this restaurant?</h2>

<h4>@Model["restaurant"].GetRestaurantName()</h4>

<form action="/cuisines/@Model["restaurant"].GetCuisineId()/restaurants/@Model["restaurant"].GetId()/delete" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit">Delete</button>
</form>
<p><a href="/cuisines/@Model["cuisine"].GetId()/restaurants/@Model["restaurant"].GetId()">Back to @Model["restaurant"].GetRestaurantName()</a></p>
